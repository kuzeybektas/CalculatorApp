<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- I mostly did this through messing with the design screen. all i had to do was connect the buttons to their listeners -->
    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_weight="2"
        android:layout_margin="2dp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="80sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />

    <!-- row 1 -->
    <GridLayout
        android:id="@+id/gridLayout3"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:columnCount="4"
        android:padding="2dp"
        android:rowCount="5"
        app:layout_constraintTop_toBottomOf="@+id/resultTextView">
        <!-- all buttons are connected to their methods using the android:onClick line -->
        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="C"
            android:onClick="onClearClick"
            android:textSize="30sp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="+/-"
            android:onClick="onToggleSignClick"
            android:textSize="30sp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="%"
            android:onClick="onPercentageClick"
            android:textSize="30sp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="รท"
            android:onClick="onOperatorClick"
            android:textSize="30sp" />
    </GridLayout>

    <!-- row 2 -->
    <GridLayout
        android:id="@+id/gridLayout4"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:columnCount="4"
        android:padding="2dp"
        android:rowCount="5"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout3">
        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="7"
            android:onClick="onNumberClick"
            android:textSize="30sp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="8"
            android:onClick="onNumberClick"
            android:textSize="30sp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="9"
            android:onClick="onNumberClick"
            android:textSize="30sp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="X"
            android:onClick="onOperatorClick"
            android:textSize="30sp" />
    </GridLayout>

    <!-- Row 3 -->
    <GridLayout
        android:id="@+id/gridLayout5"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:columnCount="4"
        android:padding="2dp"
        android:rowCount="5"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout4">
        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="4"
            android:onClick="onNumberClick"
            android:textSize="30sp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="5"
            android:onClick="onNumberClick"
            android:textSize="30sp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="6"
            android:onClick="onNumberClick"
            android:textSize="30sp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="-"
            android:onClick="onOperatorClick"
            android:textSize="30sp" />
    </GridLayout>

    <!-- row 4 -->
    <GridLayout
        android:id="@+id/gridLayout6"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:columnCount="4"
        android:padding="2dp"
        android:rowCount="5"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout5">
        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="1"
            android:onClick="onNumberClick"
            android:textSize="30sp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="2"
            android:onClick="onNumberClick"
            android:textSize="30sp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="3"
            android:onClick="onNumberClick"
            android:textSize="30sp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="+"
            android:onClick="onOperatorClick"
            android:textSize="30sp" />
    </GridLayout>


    <!-- row 5 -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:columnCount="4"
        android:padding="2dp"
        android:rowCount="5"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout6">
        <Button
            android:layout_width="197dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="0"
            android:onClick="onNumberClick"
            android:textSize="30sp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="."
            android:onClick="onNumberClick"
            android:textSize="30sp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="="
            android:onClick="onEqualClick"
            android:textSize="30sp" />
    </GridLayout>



</androidx.constraintlayout.widget.ConstraintLayout>